@model Universidad.Models.LoginView

@{
    ViewData["Title"] = "Login";
}

<h4 class="text-center">Login</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 cuadro">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dni_Docket" class="control-label"></label>
                <input asp-for="Dni_Docket" class="form-control" />
                <span asp-validation-for="Dni_Docket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <p>¿No tienes Cuenta?</p>&nbsp;
                <a asp-controller="User" asp-action="Register" class="text-info">Register</a>
            </div>
            <div class="text-danger text-center">@ViewBag.Error</div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-block btn-primary" />
            </div>
        </form>        
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
